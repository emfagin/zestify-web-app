<!-- remove.ejs -->
<div class="bkg-icons">
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-6 card">
        <div class="card-body">
          <h2 class="card-title text-center">Delete Meal Kit</h2>
          <div class="col-lg-12 col-md-12 mb-4">
            <%- include("../partials/mealkit-info", {...mealkit._doc})%>
          </div>

          <form method="post" action="/mealkits/remove/<%= mealkit._id %>">
            <div class="form-group">
              <p>Are you sure you want to delete this meal kit?</p>
              <p></p>
            </div>

            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="/mealkits/list">
              <button type="button" class="btn submit-info">Go Back</button>
            </a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
