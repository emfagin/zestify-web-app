<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 card">
            <div class="card-body">
                <h2 class="card-title text-center">Welcome Back!</h2>
                <form method="post" action="/account/log-in">

                    <div class="mb-3"> <!--Email-->
                        <label for="email" class="form-label"><span class="text-danger">*</span>Email</label>
                        <input type="text" class="form-control" value="<%= values.email %>" id="email" name="email" />
                    </div>
                    
                    <% if (validationMessages.email) { %> <!-- Email Error Message -->
                        <div class="mb-3 text-danger" id="errorMessage"> <%= validationMessages.email %> </div>
                    <% } %>

                    <div class="mb-3"> <!--Password-->
                        <label for="password" class="form-label"><span class="text-danger">*</span>Password</label>
                        <input type="text" class="form-control" id="password" name="password" />
                    </div>

                    <% if (validationMessages.password) { %> <!-- Password Error Message -->
                        <div class="mb-3 text-danger" id="errorMessage"> <%= validationMessages.password %> </div>
                    <% } %>

                    <!--Submission Button-->
                    <button type="submit" class="btn submit-info w-100">Log In</button>
                </form>
            </div>
        </div>
    </div>
</div>